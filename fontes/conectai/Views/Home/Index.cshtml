@using Conectai.Properties;
@using Conectai.Models.Data;
@model IList<EspacoPublico>
@{
    ViewBag.Title = Mensagens.STR_ESPACO_PUBLICO;
}
@section scripts{
}
@section navegacaoTopo
{
    <ol class="breadcrumb" style="margin-top: 10px;">
        <li class="active">@ViewBag.Title</li>
    </ol>
}
@if (Model.Count == 0)
{
    <div class="row" style="margin-top: 10px;">
        <div class="col-md-12">
            <div class="alert alert-warning" role="alert">
                <p class="text-center"><strong>@Mensagens.STR_NAO_EXISTEM_GRUPOS_INVESTIMENTO_CADASTRADO</strong></p>
            </div>
        </div>
    </div>
}
else
{

    foreach (var espacoPublico in Model)
    {
        <div class="row">
            <div class="col-sm-12">
                <div class="card bg-info">
                    <div class="card-body">
                        <h4 class="card-title text-left">@espacoPublico.Titulo</h4>
                        <p class="card-text text-left">@espacoPublico.Detalhamento</p>
                    </div>
                </div>
            </div>
        </div>
    }
}
