@using conectai.Models.Data;
@functions
{
	//----------------------------------------------------------------------
	//	static public
	//----------------------------------------------------------------------
	static public string fnGetStrData( System.DateTime? data )
	{
		if( data == null )
			return ( "-" );

		return ( data.Value.ToString( "dd/MM/yyyy" ) );
	}

	//----------------------------------------------------------------------------
	static public string getAttrReadOnlyInput( bool bDisabled )
	{
		if( bDisabled )
			return ( "disabled" );

		return ( string.Empty );
	}

	//----------------------------------------------------------------------------
	static public string getAttrInputChecked( bool bChecked )
	{
		if( bChecked )
			return ( "checked='checked'" );

		return ( string.Empty );
	}

	//----------------------------------------------------------------------
	static public IHtmlString getHtmltemSelecionado( System.Web.Mvc.HtmlHelper html, int idInformacao, int idValor )
	{
		if( idInformacao == idValor )
			return ( html.Raw( "selected='selected'" ) );
		else
			return ( html.Raw( "" ) );
	}
}